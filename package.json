    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.0",
    "same-runtime": "^0.0.1",
    "swiper": "^11.2.10",
    "tailwindcss-animate": "^1.0.7"
